# Duetto Configuration
# Copy this file to .env and customize

# Server settings
DUETTO_HOST=0.0.0.0
DUETTO_PORT=8000

# SEC EDGAR settings
# IMPORTANT: Replace with your email for SEC compliance
DUETTO_SEC_USER_AGENT=Duetto/1.0 (your-email@example.com)
DUETTO_SEC_POLL_INTERVAL=30
DUETTO_SEC_RATE_LIMIT=0.1

# FDA settings
DUETTO_FDA_POLL_INTERVAL=300

# Filter settings
DUETTO_MIN_MARKET_CAP=0
DUETTO_MAX_MARKET_CAP=1000000000

# Alert types to monitor
DUETTO_MONITOR_8K=true
DUETTO_MONITOR_S3=true
DUETTO_MONITOR_FORM4=true
DUETTO_MONITOR_FDA=true

# ============================================
# Notification Settings
# ============================================

# Telegram Notifications
# Get bot token from @BotFather on Telegram
# Get chat_id by messaging @userinfobot on Telegram
DUETTO_TELEGRAM_BOT_TOKEN=
DUETTO_TELEGRAM_CHAT_ID=

# Email Notifications (SMTP)
DUETTO_SMTP_HOST=smtp.gmail.com
DUETTO_SMTP_PORT=587
DUETTO_SMTP_USERNAME=your-email@gmail.com
DUETTO_SMTP_PASSWORD=your-app-password
DUETTO_EMAIL_FROM=your-email@gmail.com
DUETTO_EMAIL_TO=recipient@example.com,another@example.com

# Webhook Notifications (Discord, Slack, etc)
# Discord: Get webhook URL from Server Settings > Integrations
# Slack: Get webhook URL from Custom Integrations
DUETTO_WEBHOOK_URL=
DUETTO_WEBHOOK_FORMAT=discord

# ============================================
# AI Analysis Settings
# ============================================

# AI Provider: rule, openai, anthropic
# - rule: Free rule-based analysis (no API key needed)
# - openai: Requires OpenAI API key (or compatible endpoint)
# - anthropic: Requires Anthropic API key
DUETTO_AI_PROVIDER=rule

# OpenAI Settings (used when DUETTO_AI_PROVIDER=openai)
DUETTO_OPENAI_API_KEY=
DUETTO_OPENAI_BASE_URL=https://api.openai.com/v1
# Can use compatible endpoints like:
# - DeepSeek: https://api.deepseek.com/v1
# - Groq: https://api.groq.com/openai/v1
DUETTO_OPENAI_MODEL=gpt-4o-mini

# Anthropic Settings (used when DUETTO_AI_PROVIDER=anthropic)
DUETTO_ANTHROPIC_API_KEY=
DUETTO_ANTHROPIC_MODEL=claude-3-5-haiku-20241022

# Notification Filtering
# Minimum priority to notify: low, medium, high
DUETTO_NOTIFY_MIN_PRIORITY=medium
# Enable AI analysis in notifications
DUETTO_ENABLE_AI_IN_NOTIFICATIONS=false
